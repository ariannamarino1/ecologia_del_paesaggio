# R spatial: oggi facciamo funzioni spaziali in Ecologia del paesaggio
library(sp)
# richiamo il pacchetto "sp"
data("meuse")
# ci interessa il dataset "meuse"

head(meuse)
#plot cadmium e lead

#alleghiamo il dataframe
attach(meuse)

plot(cadmium,lead,col="blue",pch=19,cex=2)

#exercise: plot del rame e zinco (copper e zinc) con carattere triangolo e colore verde
plot(copper,zinc,pch=17,col="green",cex=2)
plot(cadmium,lead,col="blue",pch=19,cex=2)
#cambiare le etichette
plot(copper,zinc,pch=17,col="green",cex=2,xlab="Rame",ylab="Zinco")

#pi√π di un grafico dentro una finestra: multiframe o multipanel
par(mfrow=c(1,2))
plot(cadmium,lead,col="blue",pch=19,cex=2)
plot(copper,zinc,pch=17,col="green",cex=2,xlab="Rame",ylab="Zinco")

#invertiamo i grafici riga-colonna in colonna-riga
par(mfrow=c(2,1))
plot(cadmium,lead,col="blue",pch=19,cex=2)
plot(copper,zinc,pch=17,col="green",cex=2,xlab="Rame",ylab="Zinco")

#multiframe automatico
install.packages("GGally")
library(GGally)
ggpairs(meuse[,3:6]) #dalla terza alla sesta colonna [,3:6]

#Spatial!
head(meuse)

coordinates(meuse)=~x+y 
plot(meuse)

#funzioni ssplot per plottare i dati spazialmente
spplot(meuse,"zinc")


